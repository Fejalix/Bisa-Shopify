<style>
.container-ab {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  gap: 20px;
  max-height: 100vh;
  overflow: hidden;
}

.ab-right,
.ab-left {
  width: 50%;
}

.ab-description {
  margin-top: 15px;
  max-width: 800px;
  text-align: justify;
}

.ab-left img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

@media (max-width: 768px) {
  .container-ab {
    flex-direction: column;
  }
  .ab-right,
  .ab-left {
    width: 100%;
  }
}

  }
</style>
<section class="section-artist-banner">
  <div class="container-ab max-site-width px2 px-5 lg--up--px3 lg:px-10">
    <div class="ab-right">
      <h1 class="font-heading text-4xl xl:text-5xl break-word">{{ collection.title }}</h1>
      <div class="ab-description">{{ collection.description }}</div>

    </div>
    <div class="ab-left">
      <img src="{{ collection.image | img_url: 'master' }}" alt="{{ collection.title }}">
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Artist banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Heading"
      }, {
        "type": "text",
        "id": "corps-text",
        "label": "Text",
        "default": "Text"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Artist banner"
      }
    ]
  }
{% endschema %}